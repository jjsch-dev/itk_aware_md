<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "images/itk_logo_transparent.png"

    MDLabel:
        text: "Configuración"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Abrir archivo"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "open_file"
                    root.toolbar.title = self.text
                    app.file_manager_open()
                IconLeftWidget:
                    icon: "file-download"
            
            OneLineIconListItem:
                text: "Salvar archivo"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "save_file"
                    root.toolbar.title = self.text
                    app.file_manager_save()
                IconLeftWidget:
                    icon: "file-upload"

            OneLineIconListItem:
                text: "Peligro"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_danger"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"
            
            OneLineIconListItem:
                text: "Precaucion"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_warning"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"
            
            OneLineIconListItem:
                text: "Seguro"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_safe"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"

            OneLineIconListItem:
                text: "Zona"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "distance"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "ruler"
            
            OneLineIconListItem:
                text: "Sonido"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "buzzer"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "volume-high"
            
            OneLineIconListItem:
                text: "Avanzado"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "advance"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "tune"

Screen:
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Estado"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["ethernet-cable-off", lambda x: None], ["backup-restore", lambda x: app.show_alert_factory_reset()]]

    NavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "open_file"
            Screen:
                name: "save_file"
            Screen:
                name: "leds_danger"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_danger
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()
            Screen:
                name: "leds_warning"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_warning
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()
            Screen:
                name: "leds_safe"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_safe
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()

            Screen:
                name: "distance"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'  
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Peligro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f}00 mm".format(point_danger.value)
                        SliderOnRelease:
                            id: point_danger
                            min: 5
                            max: point_warning.value - 1
                            value: 5
                            hint: False  
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Precaución"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f}00 mm".format(point_warning.value)
                        SliderOnRelease:
                            id: point_warning
                            min: point_danger.value + 1
                            max: point_safe.value - 1
                            value: 5
                            hint: False
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Seguro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f}00 mm".format(point_safe.value)
                        SliderOnRelease:
                            id: point_safe
                            min: point_warning.value + 1
                            max: 20
                            value: 5
                            on_release: app.write_params()
            Screen:
                name: "buzzer"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'   
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Buzzer"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Activa el buzzer"
                        MDSwitch:
                            id: buzzer_enable
                            on_release: app.write_params()

                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}    
                        MDLabel:
                            text: "Emisión"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración en mS"
                        MDTextField:
                            id: buzzer_ton
                            text: ""
                            on_text_validate: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Pausa"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración en mS"
                        MDTextField:
                            id: buzzer_toff
                            text: ""
                            on_text_validate: app.write_params()
            Screen:
                name: "advance"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'   
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Filtro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Respuesta del sensor"
                        MDTextField:
                            id: ewma_alpha
                            text: ""
                            on_text_validate: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Histerisis"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia en mm"
                        MDTextField:
                            id: hysterisis
                            text: ""
                            on_text_validate: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}    
                        MDLabel:
                            text: "Estados"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración en mS"
                        MDTextField:
                            id: time_state
                            text: ""
                            on_text_validate: app.write_params()
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager.__self__
                nav_drawer: nav_drawer.__self__
                toolbar: toolbar.__self__
                buzzer_enable: buzzer_enable.__self__

<ProgressDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: "MDLabel"

    MDSpinner:
        id: spinner_progress
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True     

    MDProgressBar:
        id: progress
        min: 0
        max: 1
  
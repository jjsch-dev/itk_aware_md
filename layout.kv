<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "images/distance_2_red.png"

    MDLabel:
        text: "Itk-Aware"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Acerca"
                title: "Información"
                id: app_info_item
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "app_info"
                    root.toolbar.title = self.title
                IconLeftWidget:
                    icon: "information"
            
            OneLineIconListItem:
                text: "Abrir archivo"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "app_info"
                    root.toolbar.title = app_info_item.title
                    app.file_manager_open()
                IconLeftWidget:
                    icon: "file-download"
            
            OneLineIconListItem:
                text: "Salvar archivo"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "app_info"
                    root.toolbar.title = app_info_item.title
                    app.file_manager_save()
                IconLeftWidget:
                    icon: "file-upload"

            OneLineIconListItem:
                text: "Peligro"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_danger"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"
            
            OneLineIconListItem:
                text: "Precaución"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_warning"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"
            
            OneLineIconListItem:
                text: "Seguro"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "leds_safe"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "led-on"

            OneLineIconListItem:
                text: "Zonas"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "distance"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "ruler"
            
            OneLineIconListItem:
                text: "Sonido"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "buzzer"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "volume-high"
            
            OneLineIconListItem:
                text: "Avanzado"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "advance"
                    root.toolbar.title = self.text
                IconLeftWidget:
                    icon: "tune"
            
            OneLineIconListItem:
                text: "Graficar estados"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "graph_state"
                    root.toolbar.title = self.text
                    app.on_plot()
                IconLeftWidget:
                    icon: "chart-bell-curve-cumulative"

Screen:
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Información"

        left_action_items: [["menu", lambda x: app.on_navdrawer()]]
        right_action_items: [["ethernet-cable-off", lambda x: None], ["backup-restore", lambda x: app.show_alert_factory_reset()]]

    NavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height

        ScreenManager:
            id: screen_manager
            Screen:
                name: "app_info"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'  
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Versión de la APP"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "2.0"
                            pos_hint: {"center_x": .5, "center_y": .5}
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Versión del firmware"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            id: firmware_version
                            text: ""
                            pos_hint: {"center_x": .5, "center_y": .5}
                    
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Fabricante"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        Image:
                            size_hint: None, None
                            size: "56dp", "56dp"
                            source: 'images/itk_logo_transparent.png'
                        MDLabel:
                            text: "Intelektron SA"
                            pos_hint: {"center_x": .5, "center_y": .5}

            Screen:
                name: "leds_danger"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_danger
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()
            Screen:
                name: "leds_warning"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_warning
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()
            Screen:
                name: "leds_safe"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'
                    ColorPicker:
                        id: color_safe
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        size_hint: 0.8, 0.8 
                    MDRaisedButton:
                        md_bg_color: 1, 0, 1, 1
                        text: "Actualizar"
                        pos_hint: {"center_x": .5, "center_y": .5} 
                        on_release: app.write_params()

            Screen:
                name: "distance"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'  
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Peligro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f} mm".format(point_danger.value * 100)
                        SliderOnRelease:
                            id: point_danger
                            min: 5
                            max: point_warning.value - 1
                            value: 5
                            hint: False 
                            step: 1 
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Precaución"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f} mm".format(point_warning.value * 100)
                        SliderOnRelease:
                            id: point_warning
                            min: point_danger.value + 1
                            max: point_safe.value - 1
                            value: 5
                            hint: False
                            step: 1
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Seguro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia del punto {:.0f} mm".format(point_safe.value * 100)
                        SliderOnRelease:
                            id: point_safe
                            min: point_warning.value + 1
                            max: 20
                            value: 5
                            step: 1
                            on_release: app.write_params()
            Screen:
                name: "buzzer"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'   
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Buzzer"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Activa el buzzer"
                        MDCheckbox:
                            id: buzzer_enable
                            on_release: app.write_params()

                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}    
                        MDLabel:
                            text: "Emisión"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración {:2.2f} Seg".format(buzzer_ton.value/10)
                        SliderOnRelease:
                            id: buzzer_ton
                            min: 0
                            max: 20
                            value: 0
                            step: 1
                            hint: False
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Pausa"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración {:2.2f} Seg".format(buzzer_toff.value/10)
                        SliderOnRelease:
                            id: buzzer_toff
                            min: 0
                            max: 20
                            value: 0
                            step: 1
                            hint: False
                            on_release: app.write_params()
            Screen:
                name: "advance"
                MDBoxLayout:
                    padding:20
                    spacing: 10
                    orientation: 'vertical'   
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Filtro"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Constante alfa {:2.2f}".format(ewma_alpha.value/20)
                        SliderOnRelease:
                            id: ewma_alpha
                            min: 0
                            max: 10
                            value: 0
                            step: 1
                            hint: False
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Histerisis"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Distancia {:.0f} mm".format(hysterisis.value*100)
                        SliderOnRelease:
                            id: hysterisis
                            min: 0
                            max: 10
                            value: 0
                            step: 1
                            hint: False
                            on_release: app.write_params()
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: 0.8, 0.8
                        pos_hint: {"center_x": .5, "center_y": .5}    
                        MDLabel:
                            text: "Estado"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                        MDLabel:
                            text: "Duración {:2.2f} Seg".format(time_state.value/10)
                        SliderOnRelease:
                            id: time_state
                            min: 0
                            max: 20
                            value: 0
                            step: 1
                            hint: False
                            on_release: app.write_params()
            
            Screen:
                name: "graph_state"
                MDBoxLayout:
                    orientation: "vertical"
                    id: plot_box
                    padding:20
                    spacing: 10

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager.__self__
                nav_drawer: nav_drawer.__self__
                toolbar: toolbar.__self__
                buzzer_enable: buzzer_enable.__self__

<ProgressDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: "MDLabel"

    MDSpinner:
        id: spinner_progress
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True     

    MDProgressBar:
        id: progress
        min: 0
        max: 1
  